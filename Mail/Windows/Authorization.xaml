<Window x:Class="Mail.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mail"
        mc:Ignorable="d"
        Title="Authorization" Height="122" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="122*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Mail&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="55" Height="25"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="87,47,0,0" VerticalAlignment="Top" Width="134"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="15,73,0,0" VerticalAlignment="Top" Width="206" Click="Button_Click"/>
        <TextBox x:Name="Mail" HorizontalAlignment="Left" Margin="87,15,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="132" TextChanged="Mail_TextChanged"/>

    </Grid>
</Window>
