<Window x:Class="Mail.WriteMessageWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mail"
        mc:Ignorable="d"
        Title="DetailMessageWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="To" Content="To: " HorizontalAlignment="Left" Margin="30,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.481,0.579" Width="70" Height="29"/>
        <Label x:Name="Subject" Content="Subject: " HorizontalAlignment="Left" Margin="31,64,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.481,0.579" Width="70" Height="29"/>
        <TextBox x:Name="TextMessage" HorizontalAlignment="Left" Margin="24,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="744" Height="257"/>
        <TextBox x:Name="ToTextBox" HorizontalAlignment="Left" Margin="98,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="452"/>
        <TextBox x:Name="SubjectTextBox" HorizontalAlignment="Left" Margin="99,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="710,368,0,0" VerticalAlignment="Top" Width="57" Click="SendButton_Click"/>

    </Grid>
</Window>
